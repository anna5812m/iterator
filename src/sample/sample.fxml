<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <VBox prefHeight="750.0" prefWidth="750.0">
         <children>
            <ImageView fx:id="imageView" fitHeight="600.0" fitWidth="750.0" pickOnBounds="true" preserveRatio="true" />
            <ToolBar prefHeight="40.0" prefWidth="200.0">
              <items>
                <Button mnemonicParsing="false" onAction="#onStart" text="Запуск" />
                  <Button mnemonicParsing="false" onAction="#onStop" text="Стоп" />
              </items>
            </ToolBar>
         </children>
      </VBox>
   </children>
</GridPane>
